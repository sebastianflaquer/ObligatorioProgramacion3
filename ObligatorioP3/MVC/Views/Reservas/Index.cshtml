@model IEnumerable<MVC.Models.Reserva>

@{
    ViewBag.Title = "Mis Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mis Reservas</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantHuespedes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextoConsultas)
        </th>
        <th>
            Opciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantHuespedes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextoConsultas)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }) |*@
                @*@Html.ActionLink("Cancelar", "CancelarReserva", new { id = item.Id }) |*@
                @Html.ActionLink("Calificar", "CalificarReserva", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
