@model IEnumerable<MVC.Models.Calificacion>

@{
    ViewBag.Title = "ComentariosDeAlojamiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Comentarios del Alojamiento</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Registrado.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registrado.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Puntaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        @*<th>
                Opciones
            </th>*@
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Registrado.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registrado.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>

            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>
    }
</table>
